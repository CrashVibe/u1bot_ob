            background: <%=t.bodyBg %>;
            min-height: 100vh;
            padding: 20px;
            color: <%=t.bodyColor %>;
        }

        .container {
            margin: 0 auto;
            background: <%=t.containerBg %>;
            border-radius: 20px;
            backdrop-filter: blur(10px);
            box-shadow: <%=t.containerShadow %>;
            overflow: hidden;
        }

        .header {
            background: <%=t.headerBg %>;
            padding: 40px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='<%= t.headerOpacity %>'%3E%3Ccircle cx='30' cy='30' r='4'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E") repeat;
            animation: float 20s ease-in-out infinite;
        }

        @keyframes float {

            0%,
            100% {
                transform: translateY(0px) rotate(0deg);
            }

            50% {
                transform: translateY(-20px) rotate(180deg);
            }
        }

        .header h1 {
            font-size: 3rem;
            font-weight: 700;
            color: white;
            text-shadow: <%=t.headerShadow %>;
            margin-bottom: 10px;
            position: relative;
            z-index: 1;
        }

        .header .date {
            font-size: 1.5rem;
            color: <%=t.dateColor %>;
            font-weight: 300;
            position: relative;
            z-index: 1;
        }

        .content {
            padding: 40px;
        }

        .events-grid {
            display: grid;
            gap: 25px;
            grid-template-columns: repeat(3, 1fr);
        }

        .event-card {
            background: <%=t.cardBg %>;
            border-radius: 15px;
            padding: 25px;
            box-shadow: <%=t.cardShadow %>;
            border-left: 5px solid;
            position: relative;
            overflow: hidden;
        }

        .event-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: inherit;
        }

        .event-card.birth {
            border-left-color: <%=t.birthColor %>;
        }

        .event-card.death {
            border-left-color: <%=t.deathColor %>;
        }

        .event-card.event {
            border-left-color: <%=t.eventColor %>;
        }

        .event-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 15px;
            flex-wrap: wrap;
            gap: 10px;
        }

        .event-year {
            background: <%=t.yearBg %>;
            color: white;
            padding: 8px 16px;
            border-radius: 25px;
            font-weight: 600;
            font-size: 0.9rem;
            min-width: 80px;
            text-align: center;
            box-shadow: <%=t.yearShadow %>;
        }

        .event-type {
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 0.8rem;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .event-type.birth {
            background: <%=t.birthTypeBg %>;
            color: <%=t.birthTypeColor %>;
        }

        .event-type.death {
            background: <%=t.deathTypeBg %>;
            color: <%=t.deathTypeColor %>;
        }

        .event-type.event {
            background: <%=t.eventTypeBg %>;
            color: <%=t.eventTypeColor %>;
        }

        .event-title {
            font-size: 1.3rem;
            font-weight: 600;
            line-height: 1.4;
            margin-bottom: 15px;
            color: <%=t.titleColor %>;
        }

        .event-title a {
            color: <%=t.titleLinkColor %>;
            text-decoration: none;
            font-weight: 600;
            padding: 2px 6px;
            border-radius: 4px;
            background: <%=t.titleLinkBg %>;
            border-bottom: 2px solid <%=t.titleLinkBorder %>;
        }

        .event-desc {
            line-height: 1.6;
            color: <%=t.descColor %>;
            font-size: 0.95rem;
        }

        .event-desc a {
            color: <%=t.descLinkColor %>;
            text-decoration: none;
            font-weight: 500;
            padding: 1px 3px;
            border-radius: 3px;
            background: <%=t.descLinkBg %>;
        }

        .footer {
            text-align: center;
            padding: 30px 40px;
            background: <%=t.footerBg %>;
            color: <%=t.footerColor %>;
            font-size: 0.9rem;
            border-top: 1px solid <%=t.footerBorder %>;
        }

        .no-events {
            text-align: center;
            padding: 60px 40px;
            color: <%=t.noEventsColor %>;
        }

        .no-events .icon {
            font-size: 4rem;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        @media (max-width: 768px) {
            body {
                padding: 10px;
            }

            .header h1 {
